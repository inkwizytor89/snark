<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="H2-PERSISTENCE">
        <class>org.enoch.snark.db.entity.PlayerEntity</class>
        <class>org.enoch.snark.db.entity.ColonyEntity</class>
        <class>org.enoch.snark.db.entity.TargetEntity</class>
        <class>org.enoch.snark.db.entity.GalaxyEntity</class>
        <class>org.enoch.snark.db.entity.ExplorationEntity</class>
        <class>org.enoch.snark.db.entity.MessageEntity</class>
        <class>org.enoch.snark.db.entity.FleetEntity</class>
        <class>org.enoch.snark.db.entity.FarmEntity</class>
        <class>org.enoch.snark.db.entity.FleetRequestEntity</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
            <property name="javax.persistence.jdbc.url"    value="jdbc:h2:file:./db/snark;MODE=PostgreSQL" />
<!--            <property name="javax.persistence.jdbc.url"    value="jdbc:h2:mem:test" />-->
            <property name="javax.persistence.jdbc.user" value="sa" />
            <property name="javax.persistence.jdbc.password" value="" />
            <property name="hibernate.connection.autocommit" value="false" />

        </properties>
    </persistence-unit>

    <persistence-unit name="Quantum">
        <class>org.enoch.snark.db.entity.PlayerEntity</class>
        <class>org.enoch.snark.db.entity.ColonyEntity</class>
