<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="PERSISTENCE">
        <description>JPA</description>
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>org.enoch.snark.db.entity.ExplorationEntity</class>
        <class>org.enoch.snark.db.entity.PlanetEntity</class>
        <class>org.enoch.snark.db.entity.SourceEntity</class>
        <class>org.enoch.snark.db.entity.SpyInfoEntity</class>
        <class>org.enoch.snark.db.entity.UniversesEntity</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL94Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/snark"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/snark"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
        </properties>
    </persistence-unit>
</persistence>